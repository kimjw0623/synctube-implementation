doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title SyncTube
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    // Optional: include your custom styles here
    link(rel='stylesheet', href='/public/css/test.css')
  body
    .container-fluid
      .row
        .input-group.p-2
          .col.text-left.py-2 SYNCTUBE
          input.form-control(type='text', placeholder='Enter media url here').py-1
          .input-group-append.px-3
            button.btn.btn-outline-light(type='button',class="round") Playlist
            button.btn.btn-outline-light(type='button',class="round") Chat

      .row.flex-grow-1
        .col-lg-8.p-0
          script(src="/public/js/player.js")
          //- .embed-responsive.embed-responsive-16by9
          //-   iframe.embed-responsive-item(src='https://www.youtube.com/embed/VIDEO_ID', allowfullscreen='')
          // Video details
          .video-details.text-black.p-2 K-POP Piano Collection, 2023-11 | Kpop Piano Cover

        .col-lg-4
          .playlist-chat-container
            .container.mt-2.mb-2(id="playlist")
              h5 PlayList
              ol#sortable-list.list-group
                li.list-group-item Item 1
                li.list-group-item Item 2
                li.list-group-item Item 3
                li.list-group-item Item 4
                li.list-group-item Item 5

              script(src='https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.10.2/Sortable.min.js')
              script.
                // Initialize the sortable list
                var sortable = new Sortable(document.getElementById('sortable-list'), {
                  animation: 150, // ms, animation speed moving items when sorting, `0` â€” without animation
                  ghostClass: 'sortable-ghost' // Class name for the drop placeholder
                });
            .chat-container.mx-2(id= "chat",class="rounded")
              .chat-messages#chatMessages
                each message, index in chatMessages
                  .chat-message(key=index)
                    // - .username #{message}
                    //- .username #{message.username}
                    //- .timestamp #{message.timestamp}
                    .message #{message}
              .chat-input-container
                form#chatForm
                  input.form-control(type='text', placeholder='Type a message...', required)
                  button.btn.btn-primary(type='submit') Send
